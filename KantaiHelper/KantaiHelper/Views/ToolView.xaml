<UserControl x:Class="KantaiHelper.Views.ToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KantaiHelper.Views"
             xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="720">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/DefaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Expander Grid.Column="0"
                      ExpandDirection="Down"
                      Header="함대 목록"
                      Background="{DynamicResource ThemeBrushKey}"
                      IsExpanded="True">
            <Expander.Style>
                <Style/>
            </Expander.Style>
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                                   Style="{DynamicResource DefaultTextStyleKey}"
                                   Margin="5">
                    </TextBlock>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              Background="{DynamicResource ActiveBackgroundBrushKey}">
                <!--<metro:TabView ItemsSource="{Binding Source={StaticResource Source}}">-->
                <metro:TabView SelectedItem="{Binding SelectedMap, Mode=OneWayToSource}"
                                   IsSynchronizedWithCurrentItem="True"
                                   MinWidth="40">
                    <metro:TabView.Template>
                        <ControlTemplate TargetType="{x:Type metro:TabView}">
                            <StackPanel Background="{TemplateBinding Background}">
                                <ItemsPresenter/>
                            </StackPanel>
                        </ControlTemplate>
                    </metro:TabView.Template>
                    <metro:TabView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <StackPanel >
                                                    <Border Padding="10,7"
                                                                Background="{DynamicResource ThemeBrushKey}">
                                                        <TextBlock Text="{Binding Name.Name}"
                                                                       Foreground="{DynamicResource AccentBrushKey}"
                                                                       FontSize="16"/>
                                                    </Border>
                                                    <ItemsPresenter Margin="0,0,0,16"/>
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </metro:TabView.GroupStyle>
                </metro:TabView>
            </ScrollViewer>

        </Expander>

    </Grid>
</UserControl>
