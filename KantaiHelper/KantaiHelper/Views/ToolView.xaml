<UserControl x:Class="KantaiHelper.Views.ToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KantaiHelper.Views"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
			 xmlns:ViewModels="clr-namespace:KantaiHelper.ViewModels"
             xmlns:models="clr-namespace:KantaiHelper.Models"
             Background="{DynamicResource ThemeBrushKey}"
             Foreground="{DynamicResource ActiveForegroundBrushKey}"
			 d:DataContext="{d:DesignInstance ViewModels:ToolViewModel, IsDesignTimeCreatable=True}"
             metro:ThemeHelper.HasThemeResources="True"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="720">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/DefaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <CollectionViewSource x:Key="FleetShipsSource"
                                  Source="{Binding FleetShips}">
            </CollectionViewSource>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Expander Grid.Column="0"
                      ExpandDirection="Right"
                      Header="함&#xD;&#xA;대&#xD;&#xA;목&#xD;&#xA;록"
                      Background="{DynamicResource ThemeBrushKey}"
                      IsExpanded="True">
            <Expander.Style>
                <Style/>
            </Expander.Style>
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                                   Style="{DynamicResource DefaultTextStyleKey}"
                                   Margin="5">
                    </TextBlock>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              Background="{DynamicResource ActiveBackgroundBrushKey}">
                <metro:TabView ItemsSource="{Binding Source={StaticResource FleetShipsSource}}"
                                   SelectedItem="{Binding SelectedFleet, Mode=OneWayToSource}"
                                   IsSynchronizedWithCurrentItem="True"
                                   MinWidth="90">
                    <metro:TabView.Template>
                        <ControlTemplate TargetType="{x:Type metro:TabView}">
                            <StackPanel Background="{TemplateBinding Background}">
                                <ItemsPresenter/>
                            </StackPanel>
                        </ControlTemplate>
                    </metro:TabView.Template>
                    <metro:TabView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <StackPanel >
                                                    <Border Padding="10,7"
                                                                Background="{DynamicResource ThemeBrushKey}">
                                                        <TextBlock Text="{Binding Name.Name}"
                                                                       Foreground="{DynamicResource AccentBrushKey}"
                                                                       FontSize="16"/>
                                                    </Border>
                                                    <ItemsPresenter Margin="0,0,0,16"/>
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </metro:TabView.GroupStyle>
                </metro:TabView>
            </ScrollViewer>
        </Expander>
        <Grid Grid.Column="1"
                      Background="{DynamicResource BackgroundBrushKey}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <!--<ItemsControl ItemsSource="{Binding SelectedFleet.Fleet.Ships}"
                      Background="Transparent"
                      Grid.IsSharedSizeScope="True" DataContext="{Binding}"
                      Margin="3,0">
